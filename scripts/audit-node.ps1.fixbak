function Start-Audit {
    Clear-Host
    Write-Host "NODE.JS PROJECT AUDITOR (compat) ‚Äî sem classe/operadores nulos" -ForegroundColor Cyan

    Write-Log "Verificando Node e NPM..." $Colors.Info "..."
    $nodeVersion = node --version 2>$null
    if (-not $nodeVersion) { Write-Log "Node.js n√£o est√° instalado." $Colors.Error "X"; return }
    $npmVersion = npm --version 2>$null
    if (-not $npmVersion) { Write-Log "NPM n√£o est√° instalado." $Colors.Error "X"; return }
    Write-Log "Node: $nodeVersion | NPM: $npmVersion" $Colors.Success "+"

    $pkgPath = Join-Path $ProjectPath "package.json"
    if (-not (Test-Path $pkgPath)) {
